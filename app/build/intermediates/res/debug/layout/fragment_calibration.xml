<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fragment_calibration_textview_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/large_text"
        android:gravity="center"
        android:padding="@dimen/large_margin"
        android:layout_centerHorizontal="true"/>
    
	<ImageView
	    android:id="@+id/fragment_calibration_imageview_main"
        android:contentDescription="@string/calibration_content_description"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

	
	 <TextView
        android:id="@+id/fragment_calibration_textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"       
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/large_text"
        android:text="@string/calibration_status_not_good"
        android:textColor="@color/skin"
        android:gravity="center"
        android:padding="@dimen/large_margin"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
