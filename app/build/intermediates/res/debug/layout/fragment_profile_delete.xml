<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="@dimen/medium_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_profile_delete_bottom_container"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:padding="@dimen/medium_margin"
            android:text="@string/profile_delete_warning_title"
            android:textColor="@color/blue"
            android:textSize="@dimen/extra_large_text"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/profile_delete_warning_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <Space 
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_margin" />
        
        <CheckBox
            android:id="@+id/fragment_profile_delete_checkbox_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center"
            android:text="@string/profile_delete_warning_confirm"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_profile_delete_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/fragment_profile_delete_buttonbar"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:fontFamily="sans-serif-light"
            android:text="@string/profile_delete_warning_title"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/mshzhb/StudioProjects/iAnkle/app/src/main/res/layout/fragment_profile_delete.xml -->