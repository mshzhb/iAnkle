<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageView
            android:id="@+id/layout_exercise_list_row_imageview_icon"
            android:layout_width="@dimen/exercise_icon_size"
            android:layout_height="@dimen/exercise_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:contentDescription="@string/contentDescription_exercise_row_icon"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/layout_exercise_list_row_imageview_icon"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_exercise_list_row_textview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:singleLine="false"
                android:textColor="@color/blue"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/layout_exercise_list_row_textview_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/layout_exercise_list_row_textview_eye_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/skin"
                android:textSize="@dimen/small_medium_text"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/layout_exercise_list_row_textview_difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/skin"
                android:textSize="@dimen/small_medium_text"
                android:textStyle="normal" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView><!-- From: file:/Users/mshzhb/StudioProjects/iAnkle/app/src/main/res/layout/layout_exercise_list_row_recycler_view.xml -->